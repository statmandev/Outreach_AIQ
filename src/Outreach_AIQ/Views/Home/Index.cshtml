@{
    ViewData["Title"] = "Home Page";
}

@* namespace containing Quote class *@
@using Outreach_AIQ.Models

@* Notify Index View that the object (model) returned from Controller is a Quote object *@
@model Outreach_AIQ.Models.Quote

@* Rendered when shared layout calls RenderBody() *@
<div>
    <h1>@ViewData["Makes"]</h1>
    <h1>@ViewData["Models"]</h1>
    @* create form to pass Post data to controller *@
    @using (Html.BeginForm("Index", "Home"))
    {
        <table class="quoteInformation" id="mainTableWidth">
            <tr>
                <td colspan="2" style="text-align: center;"><h1>Welcome to Outreach Automotive Insurance!</h1><h1>Get a free quote now!</h1></td>
            </tr>
            <tr>
                <td><p>Simply enter some required information below. No account necessary! Once you have entered the required information, simply click the "Get Quote!" button.</p></td>
                <td><p>This information is optional and will remain between visits for 24 hours should you decide to purchase a plan.</p></td>
            </tr>
            <tr>
                <td>
                    <table id="premiumInformation">
                        <tr>
                            <td>Driver Age:</td>
                            <td><input name="Age" type="text" placeholder="Age"  /></td>
                        </tr>
                        <tr>
                            <td>Driver Zip Code:</td>
                            <td><input name="ZipCode" type="text" placeholder="Zip Code"  /></td>
                        </tr>
                        <tr>
                            <td>Annual Mileage:</td>
                            <td><input name="Mileage" type="text" placeholder="Mileage"  /></td>
                        </tr>
                        <tr>
                            <td>Vehicle Year:</td>
                            <td><input name="Year" type="text" placeholder="Year"  /></td>
                        </tr>
                        <tr>
                            <td>Vehicle Make:</td>
                            <td>
                                <select name="Make" >
                                    <option value="">Please Choose</option>
                                    <option value="Chevrolet">Chevrolet</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>Vehicle Model:</td>
                            <td>
                                <select name="Model" >
                                    <option value="">Please Choose</option>
                                    <option value="Trailblazer">Trailblazer</option>
                                </select>
                            </td>
                        </tr>
                    </table>
                </td>
                <td>
                    <table id="driverInformation">
                        <tr>
                            <td>First Name:</td>
                            <td><input name="FirstName" type="text" placeholder="First Name" value="@Model.FirstName" /></td>
                        </tr>
                        <tr>
                            <td>Last Name:</td>
                            <td><input name="LastName" type="text" placeholder="Last Name" value="@Model.LastName" /></td>
                        </tr>
                        <tr>
                            <td>Address:</td>
                            <td><input name="Address" type="text" placeholder="Address" value="@Model.Address" /></td>
                        </tr>
                        <tr>
                            <td>City:</td>
                            <td><input name="City" type="text" placeholder="City" value="@Model.City" /></td>
                        </tr>
                        <tr>
                            <td>State:</td>
                            <td><input name="State" type="text" placeholder="State" value="@Model.State" /></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center; padding-top: 5px;">
                    <input type="submit" value="Get Quote!" />&nbsp;&nbsp;&nbsp;&nbsp;Your Quote: $@Model.Premium per year.
                </td>
            </tr>
        </table>
    }
</div>